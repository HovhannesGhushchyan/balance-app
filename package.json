{
  "name": "balance-app",
  "version": "1.0.0",
  "description": "A simple web application to manage user balances using Node.js, Express, and PostgreSQL.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "migrate:reset": "npx sequelize-cli db:migrate:all"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sequelize": "^6.33.0",
    "pg": "^8.11.3",
    "umzug": "^3.3.0",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "node.js",
    "express",
    "postgresql",
    "sequelize",
    "umzug"
  ],
  "author": "Hovhannes Ghushchyan",
  "license": "MIT"
}